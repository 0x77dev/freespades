{
  "app-id": "jp.yvt.OpenSpades",
  "runtime": "org.freedesktop.Platform",
  "runtime-version": "18.08",
  "sdk": "org.freedesktop.Sdk",
  "command": "openspades",
  "finish-args": [
    "--share=ipc",
    "--socket=x11",
    "--socket=pulseaudio",
    "--socket=wayland",
    "--share=network",
    "--device=dri"
  ],
  "modules": [
    "shared-modules/glew/glew.json",
    {
      "name": "opus",
      "sources": [
        {
          "type": "git",
          "url": "https://git.xiph.org/opus.git",
          "tag": "v1.3",
          "commit": "83d5155f151ca47c9d6274ded1a7481f746b9a43",
          "disable-shallow-clone": true
        }
      ]
    },
    {
      "name": "opusfile",
      "sources": [
        {
          "type": "archive",
          "url": "https://github.com/xiph/opusfile/releases/download/v0.10/opusfile-0.10.tar.gz",
          "sha256": "48e03526ba87ef9cf5f1c47b5ebe3aa195bd89b912a57060c36184a6cd19412f"
        }
      ]
    },
    {
      "name": "wget",
      "sources": [
        {
          "type": "archive",
          "url": "https://ftp.gnu.org/gnu/wget/wget-1.20.1.tar.gz",
          "sha256": "b783b390cb571c837b392857945f5a1f00ec6b043177cc42abb8ee1b542ee1b3"
        }
      ]
    },
    {
      "name": "openspades",
      "buildsystem": "cmake",
      "build-options": {
        "cflags": "-DCMAKE_BUILD_TYPE=RelWithDebInfo",
        "cxxflags": "-DCMAKE_BUILD_TYPE=RelWithDebInfo",
        "env": {
          "CC": "clang",
          "CXX": "clang++"
        }
      },
      "sources": [
        {
          "type": "archive",
          "url": "https://github.com/yvt/openspades/archive/v0.1.3.tar.gz",
          "sha256": "ecd7aaf568f80712d981ecdd7bf9e380221dc2c16e86d2e56a0ddda87432bea3"
        }
      ]
    }
  ]
}
